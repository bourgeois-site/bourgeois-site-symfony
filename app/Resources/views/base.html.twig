<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>{% block title %}Студия Буржуа{% endblock %}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
        {% stylesheets '@AppBundle/Resources/styles/*css.scss' filter='sass' %}
            <link rel="stylesheet" href="{{ asset_url }}">
        {% endstylesheets %}
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
        {% javascripts '@AppBundle/Resources/js/*js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </head>
    <body>
        {{ render(controller('AppBundle:Default:header')) }}

        <main role="main">
            <div id="flash_for_user">
                {{ include('partials/flash_messages.html.twig', { 'flashBag': app.session.flashBag.get('notice') }) }}
            </div>
            {% block main %}{% endblock %}
        </main>

        {{ render(controller('AppBundle:Default:footer')) }}
        {{ render(controller('AppBundle:Default:discountsLink')) }}
        {{ render(controller('AppBundle:Default:callForm')) }}
        {{ render(controller('AppBundle:Default:phone')) }}
        {{ include('partials/call_button.html.twig') }}

        {% block javascripts %}{% endblock %}
    </body>
</html>
