{% extends 'admin/layout.html.twig' %}

{% block main %}
    <h1 class="page-header">
        Услуги <span class="badge">{{ services|length }}</span>
    </h1>

    <a href="{{ path('admin_new_service') }}" id="new_entity_link" class="btn btn-primary btn-lg">
        <span class="glyphicon glyphicon-plus"></span>
        Создать новую услугу
    </a>

    <div class="list-group">
        {% for service in services %}
            {% set title = service.title %}
            {% set slug = service.slug %}
            <div class="list-group-item">
                <h2 class="h3 entity_header">
                    {{ title }}
                </h2>
                <div class="entity_body">
                    <a href="{{ path('show_service', { 'slug': slug }) }}" class="btn btn-default" target="_blank">Просмотр на сайте</a>
                    <a href="{{ path('admin_edit_service', { 'slug': slug }) }}" class="btn btn-info">Редактировать</a>
                    <a href="{{ path('admin_delete_service', { 'slug': slug }) }}"class="btn btn-danger pull-right" data-confirm="Удалить {{ title }}?">Удалить</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
