<div class="modal fade" id="call_form" tabindex="-1" role="dialog" aria-labelledby="Label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3>Вызвать замерщика</h3>
                <p>Оставьте данные о себе, выключите компьютер и ждите ...</p>
            </div>
            {{ form_start(callForm) }}
                <div class="modal-body">
                    <div class="form-group">
                        {{ form_label(callForm.name) }}
                        {{ form_widget(callForm.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(callForm.phoneNumber) }}
                        {{ form_widget(callForm.phoneNumber) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(callForm.email) }}
                        {{ form_widget(callForm.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(callForm.address) }}
                        {{ form_widget(callForm.address) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(callForm.comment) }}
                        {{ form_widget(callForm.comment) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Отмена
                    </button>
                    {{ form_widget(callForm.submit) }}
                </div>
            {{ form_end(callForm) }}
        </div>
    </div>
</div>
